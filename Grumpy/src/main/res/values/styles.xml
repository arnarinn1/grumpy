<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/GrumpyActionBarStyle</item>
    </style>

    <!-- ActionBar Styles -->
    <style name="GrumpyActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/action_bar_color</item>
        <item name="android:titleTextStyle">@style/AppTheme.ActionBarTitleText</item>
    </style>

    <style name="AppTheme.ActionBarTitleText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/action_bar_text_color</item>
    </style>

    <!-- NavigationBar Styles -->
    <style name="BaseDrawerStyle"  parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/drawer_text_color</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="BaseDrawerStyle.UserInfo" parent="BaseDrawerStyle">
        <item name="android:paddingLeft">15sp</item>
        <item name="android:paddingTop">10sp</item>
    </style>

    <style name="BaseDrawerStyle.Header" parent="BaseDrawerStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="BaseDrawerStyle.ListItem" parent="BaseDrawerStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">15sp</item>
    </style>

    <!-- Base Text Styles -->
    <style name="BaseTextStyle"  parent="@android:style/TextAppearance.Medium">
        <item name="android:typeface">sans</item>
    </style>

    <style name="BaseTextStyle.DateHighlighter" parent="BaseTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/date_highlight</item>
    </style>

    <style name="BaseTextStyle.Header" parent="BaseTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/base_app_color</item>
    </style>

    <style name="BaseTextStyle.Item" parent="BaseTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/base2_app_color</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="BaseTextStyle.Big">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BaseTextStyle.Normal">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BaseTextStyle.Big.Base2Color" >
        <item name="android:textColor">@color/base2_app_color</item>
    </style>

    <style name="LauncherTheme">
        <item name="android:paddingTop">20sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">45sp</item>
        <item name="android:shadowColor">@color/base3_app_color</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">3</item>
    </style>

</resources>
