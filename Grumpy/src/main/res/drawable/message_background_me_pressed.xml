<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <!-- Background Color -->
    <gradient
        android:startColor="@color/base3_app_color"
        android:endColor="#1F8FFF"
        android:angle="90" />

    <!-- Padding for the box -->
    <padding
        android:right="6sp"
        android:left="6sp"
        android:top="6sp"
        android:bottom="6sp">
    </padding>

    <!-- Corner Radius -->
    <corners android:radius="4dp" />

</shape>